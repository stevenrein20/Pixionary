<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="480dp"
    android:layout_gravity="center"
    android:background="@drawable/layout_border">


    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/admin_settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorPrimaryText"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".35" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".65" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".8" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".95" />

    <Button
        android:id="@+id/bt_ViewUsers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryPurple"
        android:text="View users"
        android:textSize="24dp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="@id/guideline8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline7" />

    <Button
        android:id="@+id/bt_Images"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryYellow"
        android:text="Images"
        android:textSize="24dp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="@id/guideline11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline8" />

    <Button
        android:id="@+id/bt_HostRequests"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryPurple"
        android:text="Host Requests"
        android:textSize="24dp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="@id/guideline15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline11" />

    <Button
        android:id="@+id/bt_later2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryYellow"
        android:text="*later*"
        android:textSize="24dp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="@id/guideline13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline15" />

    <Button
        android:id="@+id/bt_later3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryRed"
        android:text="later*"
        android:textSize="24dp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="@id/guideline14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline13" />


</android.support.constraint.ConstraintLayout>

