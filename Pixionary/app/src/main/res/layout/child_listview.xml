<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textPlaylistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textGameHost"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/textGameHost"
        android:layout_toStartOf="@id/textGameHost"
        android:background="@color/colorPrimaryYellow"
        android:gravity="center"
        android:text="PlaylistName"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/textGameHost"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textGameType"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textGameType"
        android:layout_toStartOf="@+id/textGameType"
        android:background="@color/colorPrimaryYellow"
        android:text="Host"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/textGameType"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textPlayers"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textPlayers"
        android:layout_toStartOf="@+id/textPlayers"
        android:background="@color/colorPrimaryYellow"
        android:text="Host"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/textPlayers"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/join"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/join"
        android:layout_toStartOf="@+id/join"
        android:background="@color/colorPrimaryYellow"
        android:text="0"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText" />

    <Button
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryOrange"
        android:focusable="false"
        android:onClick="clickMe"
        android:text="Play"
        android:textColor="@color/colorPrimaryText" />



</RelativeLayout>
